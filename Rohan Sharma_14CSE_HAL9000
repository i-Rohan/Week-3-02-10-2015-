//header file
#include <iostream>
#include <stdlib.h>

using namespace std;

//function declaration
int reverse(int);   //function to reverse a number

int main()
{
    int k;
    cout<<"Enter number: ";
    cin>>k;     //input
    while(1)    //infinite while loop
    {
        if(reverse(k)==k)   //check if k is palindrome
        {
            cout<<k<<"\n";   //output
            break;  //break from while if k becomes palindrome
        }
        k++;    //increment k to check next number
    }
	return 0;
}

//function definitions
int reverse(int n)
{
    int rev=0;
    while(n!=0)
    {
        rev*=10;
        rev+=n%10;
        n/=10;
    }
    return rev;
}
